<script>

    var url;
    function xacnhanxong() {
        location = '/admin/XacnhanXongOB';

    }
    function newItem() {

        location = '/admin/ThemTrangThai';
    }
    function editItem() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('center').dialog('setTitle', 'Sửa');
            $('#dlg').form('load', row);
            url = '/admin/SuaTrangThai?id=' + row.ob;
        }
    }



    function saveItem() {

        $('#fm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.errorMsg) {
                    $.messager.show({
                        title: 'Error',
                        msg: result.errorMsg
                    });
                    alert(result.errorMsg);
                } else {
                    $.messager.show({
                        title: 'Thông báo',
                        msg: result.msg
                    });
                    alert(result.msg);
                    $('#dlg').dialog('close');        // close the dialog
                    $('#dg').datagrid('reload');    // reload the user data
                }
            }
        });

    }

    function exportsoanhang() {
        open('/admin/ExportDau8DangSoan?from=@Request.QueryString["from"]&to=@Request.QueryString["to"]&key=@Html.Raw( Request.QueryString["key"])')
    }
    function exportsoanhangds() {
        open('/admin/ExportDau8DangSoan?type=ds&from=@Request.QueryString["from"]&to=@Request.QueryString["to"]&key=@Html.Raw(Request.QueryString["key"])')
    }
    function deleteItem() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $.messager.confirm('Xác nhận', 'Bạn có chắc là muốn xóa?', function (r) {
                if (r) {

                    $.post('/admin/Xoa_TrangThai', { ob: row.ob }, function (result) {
                        if (result.success) {

                            playSound();
                            alert('Đã xóa thành công');
                            location = location;

                        } else {
                            $.messager.show({    // show error message
                                title: 'Error',
                                msg: result.errorMsg
                            });
                            playSound1();
                            alert(result.errorMsg);
                        }
                    }, 'json');
                }
            });
        }

    }

    
    function resetItem() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $.messager.confirm('Xác nhận', 'Bạn có chắc là muốn reset?', function (r) {
                if (r) {

                    $.post('/admin/Reset_TrangThai', { ob: row.ob }, function (result) {
                        if (result.success) {

                            playSound();
                            alert('Đã reset thành công');
                            $('#dg').datagrid('reload')

                        } else {
                            $.messager.show({    // show error message
                                title: 'Error',
                                msg: result.errorMsg
                            });
                            playSound1();
                            alert(result.errorMsg);
                        }
                    }, 'json');
                }
            });
        }

    }
    function loadcanhbao() {


        $.post('/admin/LoadThongBaoSoanHang', null, function (result) {
            if (result.success) {

                playSound();

                $("#nd").html("<p><a href='javascript:tatcanhbao()'>tắt cảnh báo</a></p>" + result.msg);
            }
        }, 'json');


    }
</script>

