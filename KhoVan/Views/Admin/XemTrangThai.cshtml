    function ketnoi(a, b) {
        var sl = document.getElementsByName(a);
        sl = $(sl).prev();

        $(sl).keydown(function (e) {
            if (e.which == 13) focusto(b);
        })
    }
    function ketnoitoclass(a, b) {
        var sl = document.getElementsByName(a);
        sl = $(sl).prev();

        $(sl).keydown(function (e) {
            if (e.which == 13)
                $("." + b).focus();
        })
    }
    function focusto(name) {
        var sl = document.getElementsByName(name);
        $(sl).prev().focus();

    }
