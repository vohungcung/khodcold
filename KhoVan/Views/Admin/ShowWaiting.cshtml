@{
    ViewBag.Title = "Import";
    Layout = "~/Views/Shared/_SingleLayout.cshtml";
}
<script src="~/Scripts/jquery-1.4.1.min.js"></script>
<style>
    input[type=text] {
        width: 100%;
        height: 25px;
        text-align: center;
    }

    textarea {
        width: 100%;
        height: 100px;
        text-align: center;
    }

    th {
        color: #FFF;
        background-color: navy;
    }

    .row1 {
        background-color: #DDD;
    }
</style>
<h1>
    Treo hàng
</h1>
<table cellpadding="5" cellspacing="0" style="width:100%" class="data">
    <tr>
        <th>TT</th>
        <th>
            Outbound

        </th>
        <th>
            Mã hàng

        </th>
        <th>
            Số lượng
        </th>
    </tr>
    @foreach (System.Data.DataRow item in ViewBag.data)
    {
        <tr class="row">
            <td class="tt"></td>
            <td>
                @item["OB"]
            </td>
            <td>
                @item["ItemID"]
            </td>
            <td align="right">
                @Convert.ToInt32(item["ConfirmQuantity"]).ToString("N0")

            </td>
        </tr>
    }
    <tr>
        <th colspan="3">
            Tổng cộng

        </th>

        <th align="right">
            @ViewBag.Total
        </th>
    </tr>
</table>
<script>

    $(document).ready(function () {

        var arr = $(".data").find(".row").get();
        for (var i = 0; i < arr.length; i++) {
            $(arr[i]).addClass("row" + (i % 2));
        }
        arr = $(".data").find(".tt").get();
        for (var i = 0; i < arr.length; i++) {
            $(arr[i]).html(i + 1);
        }
    })
</script>