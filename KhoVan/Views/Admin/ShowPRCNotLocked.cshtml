@{
    ViewBag.Title = "Chưa khoá";
    Layout = "~/Views/Shared/_SingleLayout.cshtml";
}
<script src="~/Scripts/jquery-1.4.1.min.js"></script>
<style>
    input[type=text] {
        width: 100%;
        height: 25px;
        text-align: center;
    }

    textarea {
        width: 100%;
        height: 100px;
        text-align: center;
    }

    th {
        color: #FFF;
        background-color: navy;
    }

    .row1 {
        background-color: #DDD;
    }

    a {
        text-decoration: none;
    }
</style>
<h1>
    Phiếu ra cổng đã hoàn thành chưa khoá
</h1>
<div style="max-height:300px;overflow:auto">


    <table cellpadding="5" cellspacing="0" style="width:100%" class="data">
        <tr>
            <th>TT</th>
            <th>
                Ngày

            </th>
            <th>
                Số phiếu

            </th>
            <th align="center">
                Số xe

            </th>
            <th align="center">
                Nhân viên

            </th>
          
        </tr>
        @foreach (System.Data.DataRow item in ViewBag.data)
        {
        <tr class="row">
            <td align="center" class="tt"></td>
            <td align="center">
                @Global.Commons.ConvertToDateTime(item["CreateDate"]).ToString("dd/MM/yyyy HH:mm")
            </td>
            <td align="center">
                <a target="_blank" href="/admin/RaCong?id=@item["PRCID"]">@item["PRCID"]</a>

            </td>
            <td align="center">
                <a target="_blank" href="/admin/RaCong?id=@item["PRCID"]">@item["SX"]</a>

            </td>
            <td align="center">
                <a target="_blank" href="/admin/RaCong?id=@item["PRCID"]">@item["NVGH"]</a>

            </td>
           
        </tr>
        }
       
    </table>
</div>

<script>

    $(document).ready(function () {

        var arr = $(".data").find(".row").get();
        for (var i = 0; i < arr.length; i++) {
            $(arr[i]).addClass("row" + (i % 2));
        }
        arr = $(".data").find(".tt").get();
        for (var i = 0; i < arr.length; i++) {
            $(arr[i]).html(i + 1);
        }
    })
</script>