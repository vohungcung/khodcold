        var i = 0;
        while (i < arr.length - 1) {
            var i1 = parseInt($.trim($(arr[i]).html()));
            var item1 = $(arr[i]).attr("itemid");
            var min = i1;
            for (var j = i + 1; j < arr.length; j++) {
                var i2 = parseInt($.trim($(arr[j]).html()));
                var item2 = $(arr[j]).attr("itemid");

                if (item1 == item2) {
                    if (i1 + 1 == i2) {
                        $(arr[i]).html(min + "->" + i2);
                        $(arr[j]).html("");
                        i1 = i2;
                    } else {
                        i = j;
                        break;
                    }
                }

                else {
                    i = j;
                    break;


                }
            }
            i++;



        }

    }

