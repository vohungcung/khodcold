<script>
    function val(e) {
        if (e == 0) return 0;

        if (e == null || e == "undefined")
            return 0;
        try {
            var b = e + "";
            while (b.indexOf(",") >= 0)
                b = b.replace(",", "");
            while (b.indexOf(" ") >= 0)
                b = b.replace(" ", "");

            return parseFloat(b);
        } catch (e11) {
            return 0;
        }
        return 0;
    }
    function formatnumber(e) {
        if (e == 0) return 0;

        if (e == null || e == "undefined")
            return 0;
        try {
            e = e + "";

            while (e.indexOf(",") >= 0)
                e = e.replace(",", "");

            var len = (e + "").length;

            var result = "";
            var c = 0;
            for (var i = len - 1; i >= 0; i--) {

                result = e.charAt(i) + result;
                if (c == 2 && i > 0 && i < len - 1)
                    result = "," + result;
                c = (c + 1) % 3;
            }
            return result;
        } catch (e11) {
            return 0;
        }
        return 0;
    }

</script>
