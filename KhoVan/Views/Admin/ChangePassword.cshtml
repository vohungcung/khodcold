@{
  
    Layout = "~/Views/Shared/_ChangePasswordLayout.cshtml";
}
@using (Html.BeginForm())
{ <h1>Đổi mật khẩu</h1>
    <table border="0" cellpadding="10" cellspacing="0">

        <tr>
            <td colspan="2">
                <span style="color: green">
                    @ViewBag.MessageSuccess
                </span>
                <span style="color: red">
                    @ViewBag.MessageError
                </span>

            </td>
        </tr>
        <tr>
            <td align="right">Mật khẩu mới
            </td>
            <td>

                @Html.Password("password", null, new { @class = "txt", @autocomplete = "off" })
            </td>
        </tr>
        <tr>
            <td align="right">Gõ lại mật khẩu
            </td>
            <td>
                @Html.Password("repassword", null, new { @class = "txt", @autocomplete = "off" })

            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" name="name" value="Thay đổi" />
            </td>
        </tr>
    </table>
}