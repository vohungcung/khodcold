@{
    ViewBag.Title = "Cảnh báo";
    Layout = "~/Views/Shared/_SingleLayout.cshtml";
}
<script src="~/Scripts/jquery-1.4.1.min.js"></script>
<style>
    input[type=text] {
        width: 100%;
        height: 25px;
        text-align: center;
    }

    textarea {
        width: 100%;
        height: 100px;
        text-align: center;
    }

    th {
        color: #FFF;
        background-color: navy;
    }

    .row1 {
        background-color: #DDD;
    }

    a {
        text-decoration: none;
    }
</style>
<h1>
    Outbound chưa xác nhận xong
</h1>
<div style="max-height:300px;overflow:auto">


    <table cellpadding="5" cellspacing="0" style="width:100%" class="data">
        <tr>
            <th>TT</th>
            <th>
                Outbound

            </th>
           
            <th align="center">
               Khách hàng
            </th>
            <th align="right">
               Hàng hóa
            </th>
            <th align="right">
               Túi xốp
            </th>
        </tr>
        @foreach (System.Data.DataRow item in ViewBag.data)
        {
            <tr class="row">
                <td align="center" class="tt"></td>

                <td align="center">
                @item["OB"]

                </td>
                <td >
                @item["CustomerName"]
                </td>
                <td align="right">

                 @Global.Commons.ConvertToDecimal(item["HH"]).ToString("N0")
                </td>
                <td align="right">

                    @Global.Commons.ConvertToDecimal(item["TX"]).ToString("N0")
                </td>
            </tr>
        }
       
    </table>

</div>
<p style="text-align:center">
    <a href="/admin/canhbaotrangthaixacnhan_export" target="_blank">Export</a>
</p>
<script>

    $(document).ready(function () {

        var arr = $(".data").find(".row").get();
        for (var i = 0; i < arr.length; i++) {
            $(arr[i]).addClass("row" + (i % 2));
        }
        arr = $(".data").find(".tt").get();
        for (var i = 0; i < arr.length; i++) {
            $(arr[i]).html(i + 1);
        }
    })
</script>