            open(url);
        });

        $("#r2").click(function () {
            var url = "/admin/AddMItem";
            showtc(url, 600, 400);

        });
        $("#r3").click(function () {
            var url = "/admin/CHFromDate";
            showtchasbg(url, 600, 400,"#fff");

        });

        $("#r4").click(function () {
            var url = "/admin/CTFromDate";
