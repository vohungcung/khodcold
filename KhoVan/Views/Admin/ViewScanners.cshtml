<script type="text/javascript">

    function playSound() {
        try {
            var sound = document.getElementById("audio");
            sound.play();
        } catch (e) {

        }

    }
    function playSound1()
    {
        try {
            var sound = document.getElementById("audio1");
            sound.play();
        } catch (e) {

        }

    }
    function deleteItem() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            $.messager.confirm('Xác nhận', 'Bạn có chắc là muốn xóa phiếu này?', function (r) {
                if (r) {
                    if (row.Locked == 1) {
                        playSound1();
                        alert('Phiếu này đã bị khoá');
                        $.messager.show({    // show error message
                            title: 'Error',
                            msg: 'Phiếu này đã bị khoá'
                        });

                        return;
                    }
                    $.post('/admin/DeleteOB', { OB: row.OB }, function (result) {
                        if (result.success) {
                            alert('Đã xóa thành công');
                            playSound();
                            location = location;

                        } else {
                            $.messager.show({    // show error message
                                title: 'Error',
                                msg: result.errorMsg
                            });
                            playSound1();
                        }
                    }, 'json');
                }
            });
        }

    }
    function printob() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            var l = "/admin/obbarcode?type=1&key=" + row.OB;
            open(l);
        }



    }
    function printob2() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            var l = "/admin/obbarcode?key=" + row.OB;
            open(l);
        }



    }


    var url;

    function editItem() {
        var row = $('#dg').datagrid('getSelected');
        if (row) {
            var winform = '@Request.QueryString["f"]';

            url = '/admin/UpdateScanner1?id=' + row.OB;
            location = url;
        }
    }
    $(document).ready(function () {
        var winform = '@Request.QueryString["f"]';


    });
    $(window).load(function () {
        loadmessage();
    })
    function exportexcel() {
        var url = "/admin/ES?from=@Request.QueryString["from"]&to=@Request.QueryString["to"]&key=@Request.QueryString["key"]";
        location = url;
    }
    function shownoxh() {
        var url = '/admin/shownoxh';
        showtc(url, 600, 400);

    }
    function showxh() {
        var url = '/admin/showxh';
        showtc(url, 600, 400);

    }
    function loadmessage() {
        $.post('/admin/LoadMessageFromScanner',null, function (result) {
            if (result.success) {
                $("#message").html(result.content);
            } else {

            }
        }, 'json');

    }
    function lockob() {
        var ob = prompt("Nhập số outbound cần khoá", '');
        if (ob != null)
            if (isNaN(ob) == true || ob.length != 10) {
                playSound1();
                alert('Outbound không hợp lệ');

            }
            else {
                $.post('/admin/LockOB', { OB: ob }, function (result) {
                    if (result.success) {
                        playSound();
                        alert(result.msg);
                       location = location;

                    } else {

                        playSound1();
                        $.messager.show({    // show error message
                            title: 'Error',
                            msg: result.errorMsg
                        });
                    }
                }, 'json');
            }

    }
    function unlockob() {
        var ob = prompt("Nhập số outbound cần mở", '');
        if (ob != null)
            if (isNaN(ob) == true||ob.length!=10) {
                playSound1();
                alert('Outbound không hợp lệ');

            }
            else {
                $.post('/admin/UnLockOB', { OB: ob }, function (result) {
                    if (result.success) {
                        playSound();
                        alert(result.msg);
                        location = location;

                    } else {

                        playSound1();
                        $.messager.show({    // show error message
                            title: 'Error',
                            msg: result.errorMsg
                        });
                    }
                }, 'json');
            }

    }
</script>
