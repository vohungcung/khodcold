@{
    ViewBag.Title = "Treo";
    Layout = "~/Views/Shared/_SingleLayout.cshtml";
}
<script src="~/Scripts/jquery-1.4.1.min.js"></script>
<style>
    input[type=text] {
        width: 100%;
        height: 25px;
        text-align: center;
    }

    textarea {
        width: 100%;
        height: 100px;
        text-align: center;
    }

    th {
        color: #FFF;
        background-color: navy;
    }

    .row1 {
        background-color: #DDD;
    }

    a {
        text-decoration: none;
    }
</style>
<h1>
    Outbound có vị trí chờ xác nhận lấy hàng
</h1>
<div style="max-height:300px;overflow:auto">


    <table cellpadding="5" cellspacing="0" style="width:100%" class="data">
        <tr>
            <th>TT</th>
            <th>
                Số phiếu lấy hàng

            </th>
            <th>
                Outbound

            </th>
            <th align="center">
                Vị trí
            </th>
            <th align="right">
                Số lượng
            </th>
        </tr>
        @foreach (System.Data.DataRow item in ViewBag.data)
        {
            <tr class="row">
                <td align="center" class="tt"></td>

                <td align="center">
                    <a target="_blank" href="/admin/SX?id=@item["VoucherID"]">@item["VoucherID"]</a>

                </td>
                <td align="center">
                    <a target="_blank" href="/admin/SX?id=@item["VoucherID"]">@item["OB"]</a>

                </td>
                <td align="center">
                    @Html.Raw(item["VT"])
                </td>
                <td align="right">

                    <a target="_blank" href="/admin/SX?id=@item["VoucherID"]"> @Convert.ToInt32(item["Quantity"]).ToString("N0")</a>
                </td>
            </tr>
        }
        <tr>
            <th colspan="4">
                Tổng cộng

            </th>

            <th align="right">
                @ViewBag.Total
            </th>
        </tr>
    </table>

</div>
<p style="text-align:center">
    <a href="/admin/ExportTreo" target="_blank">Export</a>
</p>
<script>

    $(document).ready(function () {

        var arr = $(".data").find(".row").get();
        for (var i = 0; i < arr.length; i++) {
            $(arr[i]).addClass("row" + (i % 2));
        }
        arr = $(".data").find(".tt").get();
        for (var i = 0; i < arr.length; i++) {
            $(arr[i]).html(i + 1);
        }
    })
</script>